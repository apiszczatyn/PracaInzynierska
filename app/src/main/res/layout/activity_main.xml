<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- PODGLÄ„D KAMERY (DZIAÅA CAÅY CZAS) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:implementationMode="performance" />

    <!-- RAKIETA Z OKNEM (START, ZOOM-IN) -->
    <ImageView
        android:id="@+id/rocketWithWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rocket_space"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:alpha="1"
        android:translationX="0dp"
        android:translationY="0dp"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RAKIETA BEZ OKNA (PO ZOOM-IN, RAMKA / MASKA) -->
    <ImageView
        android:id="@+id/rocketNoWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rocket_space_no_window"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:alpha="0"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- OVERLAY (np. ramki, debug, pÃ³Åºniej) -->
    <com.example.licznikusmiechow.OverlayView
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--
    EMOJI â€“ WYÅÄ„CZONE NA TEN ETAP
    <TextView
        android:id="@+id/smileEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ˜„"
        android:textSize="100sp"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />
    -->

    <!-- TEKST STATUSU -->
    <TextView
        android:id="@+id/smileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="â€¦"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
